{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build (g++)",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "src/Livespice_to_DSP.cpp",
                "src/LiveSpiceParser.cpp",
                "src/CircuitAnalyzer.cpp",
                "src/CircuitVisualizer.cpp",
                "src/CircuitDiagnostics.cpp",
                "src/LiveSpiceConnectionMapper.cpp",
                "src/JuceDSPGenerator.cpp",
                "src/TopologyPatterns.cpp",
                "src/DiodeModels.cpp",
                "-o",
                "livespice-translator",
                "-lm"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "build & run",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "g++ -std=c++17 -Wall -Wextra -O2 src/Livespice_to_DSP.cpp src/LiveSpiceParser.cpp src/CircuitAnalyzer.cpp src/CircuitVisualizer.cpp src/CircuitDiagnostics.cpp src/LiveSpiceConnectionMapper.cpp src/JuceDSPGenerator.cpp src/TopologyPatterns.cpp -o livespice-translator -lm && ./livespice-translator"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "run",
            "type": "shell",
            "command": ".\\livespice-translator",
            "args": [],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "run with file argument",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                ".\\livespice-translator \"examples/example pedals/Boss Super Overdrive SD-1.schx\""
            ],
            "group": {
                "kind": "test"
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "clean",
            "type": "shell",
            "command": "powershell",
            "args": [
                "-Command",
                "Remove-Item -Force livespice-translator.exe -ErrorAction SilentlyContinue; Remove-Item -Force livespice-translator -ErrorAction SilentlyContinue; Write-Host 'Clean complete'"
            ],
            "group": {
                "kind": "build"
            }
        },
        {
            "label": "build diode tests",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "src/DiodeModels.cpp",
                "test_diode_models.cpp",
                "-o",
                "test_diode_models",
                "-lm"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run diode tests",
            "type": "shell",
            "command": ".\\test_diode_models",
            "args": [],
            "group": {
                "kind": "test"
            },
            "dependsOn": ["build diode tests"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "build spice validation",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-Wall",
                "-Wextra",
                "-O2",
                "src/DiodeModels.cpp",
                "src/SpiceValidation.cpp",
                "src/LiveSpiceParser.cpp",
                "test_spice_validation.cpp",
                "-o",
                "test_spice_validation",
                "-lm"
            ],
            "group": {
                "kind": "build"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "run spice validation",
            "type": "shell",
            "command": ".\\test_spice_validation",
            "args": [],
            "group": {
                "kind": "test"
            },
            "dependsOn": ["build spice validation"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
            "dependsOn": ["build diode tests"],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        }
    ]
}
